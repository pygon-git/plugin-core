{
    "name" : "pygon-git/plugin-core",
    "description" : "CakePHP Plugin: Core plugin that manages generic methods and dependancies on other plugins.",
    "type" : "cakephp-plugin",
    "keywords" : ["cakephp", "plugin", "framework"],
    "authors": [
        {
            "name": "Brian French",
            "role": "Developer"
        },
        {
            "name": "Joshua Knust",
            "role": "Manager"
        }
    ],
    "minimum-stability" : "dev",
    "prefer-stable" : true,
    "require": {
        "php": ">=5.6",
        "cakephp/cakephp": "3.5.*",
        "mobiledetect/mobiledetectlib": "2.*",
        "cakephp/migrations": "~1.0",
        "cakephp/plugin-installer": "~1.0",
        "josegonzalez/dotenv": "2.*",
        "friendsofcake/bootstrap-ui": "^1.2",
        "twbs/bootstrap": "^3.3",
        "components/jquery": "^3.2",
        "cakephp/bake": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "PygonGit\\PluginCore\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PygonGit\\PluginCore\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "post-install-cmd": "PygonGit\\PluginCore\\Console\\Installer::postInstall",
        "post-update-cmd": "PygonGit\\PluginCore\\Console\\Installer::postUpdate",
        "post-create-project-cmd": "PygonGit\\PluginCore\\Console\\Installer::postInstall"
    }
}
